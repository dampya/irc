# HTTP -> HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name digitalsufi.xyz www.digitalsufi.xyz;

    return 301 https://$host$request_uri;
}

# HTTPS site
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name digitalsufi.xyz www.digitalsufi.xyz;

    root /home/ubuntu/digitalsufi-build;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location ~* \.(?:css|js|mjs|map|ico|png|jpg|jpeg|gif|svg|webp|avif|woff2?|ttf|eot)$ {
        expires 30d;
        add_header Cache-Control "public, max-age=2592000, immutable";
        try_files $uri =404;
    }

    ssl_certificate /etc/letsencrypt/live/digitalsufi.xyz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/digitalsufi.xyz/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}
